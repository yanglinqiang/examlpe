<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<pattern>%date [%thread] %-5level %logger{80} - %msg%n</pattern>
		</layout>
	</appender>
	<appender name="logfile" class="ch.qos.logback.core.rolling.RollingFileAppender">
	  <!-- file property left unset/blank -->
	  <file>/data/applogs/qmht-web/qmht.log</file>
	  <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
	    <fileNamePattern>/data/applogs/qmht-web/qmht.%d{yyyy-MM-dd}.log</fileNamePattern>
	  </rollingPolicy>
	  <encoder>
	    <pattern>%date %relative [%thread] %level %logger - %msg%n</pattern>
	  </encoder>
	</appender>
	<root>
		<level value="info" />
		<appender-ref ref="logfile" />
		<appender-ref ref="stdout" />
	</root>
</configuration>
